<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="splashtheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
    <style name="TextAppearance.BYekan" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/BYekan.ttf</item>
    </style>
    <style name="TextAppearance.mvboli" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/mvboli.ttf</item>
    </style>
    <style name="TextAppearance.bkoodK" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/BKoodkBd.ttf</item>
        <item name="android:textColor">#777777</item>
    </style>

</resources>
